<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FB"
    android:padding="16dp">

    <!-- 상단바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹 목표 설정"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2A3D45"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/restart_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="auto"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="새로고침"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_roll" />
    </LinearLayout>

    <!-- 목표 기간 설정 -->
    <TextView
        android:id="@+id/goal_duration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 기간 설정"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_marginTop="16dp" />

    <!-- 시작 날짜 선택 -->
    <Button
        android:id="@+id/start_date_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시작 날짜 선택"
        android:backgroundTint="#D0F4DE"
        android:textColor="#2A3D45"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/start_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택된 시작 날짜: 없음"
        android:textSize="16sp"
        android:textColor="#2A3D45"
        android:layout_marginBottom="16dp" />

    <!-- 종료 날짜 선택 -->
    <Button
        android:id="@+id/end_date_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="종료 날짜 선택"
        android:backgroundTint="#D0F4DE"
        android:textColor="#2A3D45"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/end_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택된 종료 날짜: 없음"
        android:textSize="16sp"
        android:textColor="#2A3D45"
        android:layout_marginBottom="16dp" />

    <!-- 목표 내용 입력 -->
    <EditText
        android:id="@+id/goal_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="목표 내용을 입력하세요"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textColor="#2A3D45"
        android:layout_marginBottom="8dp" />

    <!-- 목표 추가 버튼 -->
    <Button
        android:id="@+id/add_goal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="목표 추가하기"
        android:backgroundTint="#D0F4DE"
        android:textColor="#2A3D45"
        android:layout_marginBottom="16dp"
        android:padding="12dp" />

    <!-- 목표 리스트 -->
    <TextView
        android:id="@+id/goal_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 목록"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/goal_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:divider="#D0F4DE"
        android:dividerHeight="1dp" />

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D0F4DE"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_home"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_group"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_alarm"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_mypage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_mypage"
            android:tint="#2A3D45" />
    </LinearLayout>
</LinearLayout>
