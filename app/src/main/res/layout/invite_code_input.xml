<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#D0F4DE"
    tools:context=".InviteCodeActivity">

    <!-- 이미지 (로고) -->
    <ImageView
        android:id="@+id/buddyquest_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/buddyquest"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="-90dp" />

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/invite_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="초대 코드가 있나요?"
        android:textColor="#2A3D45"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- 안내 문구 -->
    <TextView
        android:id="@+id/invite_code_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초대 코드를 입력하면 Buddy Quest에 참여할 수 있습니다!"
        android:textSize="16sp"
        android:textColor="#2A3D45"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

    <!-- 초대 코드 입력란 -->
    <EditText
        android:id="@+id/invite_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="초대 코드 입력"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textColor="@android:color/black" />

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="12dp"
        android:backgroundTint="#2A3D45"
        android:textColor="@android:color/white"
        android:gravity="center" />

    <!-- 안내 문구 하단 -->
    <TextView
        android:id="@+id/invite_code_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초대 코드는 발급 후 24시간 이내만 유효합니다."
        android:textSize="14sp"
        android:textColor="#556B2F"
        android:layout_marginTop="24dp"
        android:gravity="center" />

</LinearLayout>
