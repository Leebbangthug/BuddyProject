<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FB"
    android:padding="16dp">

    <!-- 상단 바: 그룹 이름과 커뮤니티 아이콘 포함 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/group_goal_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="그룹 1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2A3D45" />

        <ImageButton
            android:id="@+id/community_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_group"
            android:background="@null"
            android:tint="@color/black"/>
    </LinearLayout>

    <!-- 초대된 멤버 리스트 -->
    <TextView
        android:id="@+id/member_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초대된 멤버"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_marginTop="16dp" />

    <ListView
        android:id="@+id/member_list"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:divider="#D0F4DE"
        android:dividerHeight="1dp" />

    <!-- 랭킹 그래프 -->
    <TextView
        android:id="@+id/ranking_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="랭킹 현황"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/ranking_graph"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#D0F4DE"
        android:layout_marginBottom="16dp" />

    <!-- 그룹 목표 설정 -->
    <TextView
        android:id="@+id/group_goal_section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 목표 설정"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/set_group_goal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="목표 설정하기"
        android:backgroundTint="#D0F4DE"
        android:textColor="#2A3D45"
        android:padding="12dp" />

    <!-- 개인 목표 설정 -->
    <TextView
        android:id="@+id/personal_goal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인 목표 설정"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/set_personal_goal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="개인 목표 설정하기"
        android:backgroundTint="#FDFFB6"
        android:textColor="#2A3D45"
        android:padding="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 초대 코드 확인 -->
    <TextView
        android:id="@+id/invite_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초대코드"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/view_invite_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="초대 코드 확인"
        android:backgroundTint="#D0F4DE"
        android:textColor="#2A3D45"
        android:padding="12dp" />

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#D0F4DE"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="@null"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_group"
            android:background="@null"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_alarm"
            android:background="@null"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_mypage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_mypage"
            android:background="@null"
            android:tint="#2A3D45" />
    </LinearLayout>
</LinearLayout>
