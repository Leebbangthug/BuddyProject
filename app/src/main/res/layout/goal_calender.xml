<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FB"
    android:padding="16dp">

    <!-- 상단바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buddy Quest"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2A3D45"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <!-- 캘린더 뷰 -->
    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- 목표 리스트 -->
    <ListView
        android:id="@+id/goal_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:divider="#D0F4DE"
        android:dividerHeight="1dp" />

    <!-- 목표 추가 버튼 -->
    <Button
        android:id="@+id/add_goal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="목표 추가하기"
        android:backgroundTint="#D0F4DE"
        android:textColor="#2A3D45"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D0F4DE"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_home"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_group"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_alarm"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_mypage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_mypage"
            android:tint="#2A3D45" />
    </LinearLayout>
</LinearLayout>
