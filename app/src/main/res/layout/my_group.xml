<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FB"
    android:padding="16dp">

    <!-- 상단 제목 -->
    <TextView
        android:id="@+id/my_groups_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 그룹"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_marginBottom="16dp" />

    <!-- 그룹 리스트를 포함하는 ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 가입된 그룹 리스트 -->
            <ListView
                android:id="@+id/my_groups_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:divider="#D0F4DE"
                android:dividerHeight="1dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>
    <!-- 그룹 생성 및 초대 코드 입력 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/create_group_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="새 그룹 만들기"
            android:backgroundTint="#D0F4DE"
            android:textColor="#2A3D45"
            android:padding="10dp" />
    </LinearLayout>
    <!-- 그룹 추가 버튼 -->

    <!-- 하단 네비게이션 바 고정 -->
    <Button
        android:id="@+id/join_group_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#D0F4DE"
        android:padding="12dp"
        android:text="그룹 초대코드 입력하기"
        android:textColor="#2A3D45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#D0F4DE"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="@null"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_group"
            android:background="@null"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_alarm"
            android:background="@null"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_mypage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_mypage"
            android:background="@null"
            android:tint="#2A3D45" />
    </LinearLayout>
</LinearLayout>
