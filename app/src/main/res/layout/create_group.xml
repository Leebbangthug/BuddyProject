<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8F9FB">

    <!-- 상단 제목 -->
    <TextView
        android:id="@+id/create_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 만들기"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_marginBottom="16dp" />

    <!-- 그룹 이름 입력 -->
    <EditText
        android:id="@+id/group_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="그룹 이름 입력"
        android:background="@android:color/white"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp" />

    <!-- 카테고리 선택 -->
    <TextView
        android:id="@+id/category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리 선택 "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(없으면 선택 안해도 됩니다)"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="#A0A0A0"
        android:layout_marginTop="4dp" />

    <GridLayout
        android:id="@+id/category_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_marginBottom="16dp">

        <Button android:id="@+id/category_diet" android:text="다이어트"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:backgroundTint="#D0F4DE"
            android:textColor="#2A3D45"
            android:layout_margin="4dp" />
        <Button android:id="@+id/category_study" android:text="공부"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:backgroundTint="#D0F4DE"
            android:textColor="#2A3D45"
            android:layout_margin="4dp" />
        <Button android:id="@+id/category_management" android:text="관리"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:backgroundTint="#D0F4DE"
            android:textColor="#2A3D45"
            android:layout_margin="4dp" />
        <Button android:id="@+id/category_health" android:text="건강"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:backgroundTint="#D0F4DE"
            android:textColor="#2A3D45"
            android:layout_margin="4dp" />
        <Button android:id="@+id/category_finance" android:text="재테크"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:backgroundTint="#D0F4DE"
            android:textColor="#2A3D45"
            android:layout_margin="4dp" />
        <Button android:id="@+id/category_hobby" android:text="취미"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:backgroundTint="#D0F4DE"
            android:textColor="#2A3D45"
            android:layout_margin="4dp" />
        <Button android:id="@+id/category_social" android:text="인맥"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:backgroundTint="#D0F4DE"
            android:textColor="#2A3D45"
            android:layout_margin="4dp" />
        <Button android:id="@+id/category_etc" android:text="그 외(기타)"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:backgroundTint="#D0F4DE"
            android:textColor="#2A3D45"
            android:layout_margin="4dp" />
    </GridLayout>

    <!-- 그룹 설명 입력 -->
    <TextView
        android:id="@+id/group_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 설명"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/group_description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="그룹 소개를 입력하세요"
        android:background="@android:color/white"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- 방 만들기 버튼 -->
    <Button
        android:id="@+id/create_group_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:backgroundTint="#D0F4DE"
        android:textColor="#2A3D45"
        android:text="방 만들기" />

</LinearLayout>
