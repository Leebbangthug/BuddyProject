<?xml version="1.0" encoding="utf-8"?>

<!-- 개인 및 그룹 목표 설정 페이지 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FB"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 설정"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2A3D45"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 빈 공간을 추가하여 라디오 그룹을 중앙으로 이동 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 목표 선택 라디오 그룹 (가운데 정렬) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/goal_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <RadioButton
                android:id="@+id/radio_group_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#2A3D45"
                android:padding="12dp"
                android:text="그룹 목표 설정하기"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radio_personal_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#2A3D45"
                android:padding="12dp"
                android:text="개인 목표 설정하기"
                android:textSize="18sp" />
        </RadioGroup>
    </LinearLayout>

    <!-- 빈 공간을 추가하여 하단 네비게이션 바와 간격 조정 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D0F4DE"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_home"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_group"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_alarm"
            android:tint="#2A3D45" />

        <ImageButton
            android:id="@+id/nav_mypage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_mypage"
            android:tint="#2A3D45" />
    </LinearLayout>

</LinearLayout>
